<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|start"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonClubProfileImage"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:src="@drawable/ic_default_profile_image"
            android:contentDescription="Club Image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewClubProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start|left"

                    android:text="Club Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewClubType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start|left"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="Public"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RatingBar
                    android:id="@+id/ratingBarClubTotalRating"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:numStars="5"
                    android:rating="2.5"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewClubCreatedOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|end|right"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="28-10-2016"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewClubStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|start"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Status bla bla bvlakjskdsadasjd bla bla"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|start"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Admin"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewClubAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|start"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Admin Name"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
