<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="1"
    android:stretchColumns="1"
    android:background="@color/windowBackground"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonBottomSheetProfile"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:src="@drawable/ic_default_profile_image"
            />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            >

            <TableRow>
                <TextView
                    android:id="@+id/textViewBottomSheetProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Club Name"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="top"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_gravity="top|center_horizontal">

                <TextView
                    android:id="@+id/textViewBottomSheetProfileStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="06/07/2016 06:09 am"
                    android:textSize="12dp"
                    android:layout_weight="1"

                    />
            </TableRow>
        </TableLayout>

    </TableRow>

</TableLayout>
