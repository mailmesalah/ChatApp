<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:shrinkColumns="1"
    android:stretchColumns="1">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageButton
                android:id="@+id/imageButtonContactProfileImage"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_default_profile_image"
                />
            <ImageButton
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/round_corner_white"
                />
        </FrameLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            >

            <TableRow>
                <TextView
                    android:id="@+id/textViewContactProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="top"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textViewContactProfileStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Status comes hfsdfdsfsdfsdfsdfsdfsdfsdfs"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            >
            <TableRow
                android:layout_width="wrap_content"
                >
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabMiniRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_remove"
                    app:backgroundTint="@color/colorPrimary"
                    android:clickable="true"
                    app:elevation="1dp"
                    app:pressedTranslationZ="6dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabMiniBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_block"
                    app:backgroundTint="@color/colorPrimary"
                    android:clickable="true"
                    app:elevation="1dp"
                    app:pressedTranslationZ="6dp"
                    />
            </TableRow>

        </TableLayout>
    </TableRow>

</TableLayout>
